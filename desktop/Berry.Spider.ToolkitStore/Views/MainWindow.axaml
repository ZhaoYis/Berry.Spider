<Window
    Icon="/Assets/avalonia-logo.ico"
    Title="Berry.Spider.ToolkitStore"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="Berry.Spider.ToolkitStore.Views.MainWindow"
    x:DataType="vm:MainWindowViewModel"
    SizeToContent="WidthAndHeight"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Berry.Spider.ToolkitStore.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Design.DataContext>
        <!--
            This only sets the DataContext for the previewer in an IDE,
            to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs)
        -->
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <StackPanel>

        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_File">
                    <MenuItem Header="_Exit" Command="{Binding AppExitCommand}" />
                </MenuItem>
                <MenuItem Header="_About">
                    <MenuItem Header="About Us" />
                </MenuItem>
            </Menu>
        </DockPanel>

        <Grid Margin="5" ShowGridLines="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"></ColumnDefinition>
                <ColumnDefinition Width="500"></ColumnDefinition>
                <ColumnDefinition Width="180"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Label
                Content="启动程序路径:"
                Grid.Column="0"
                Grid.Row="0"
                HorizontalAlignment="Center"
                Margin="5"
                VerticalContentAlignment="Center" />
            <TextBox
                Grid.Column="1"
                Grid.Row="0"
                HorizontalContentAlignment="Left"
                IsReadOnly="True"
                Margin="5"
                Text="{Binding AppStrapPath}"
                VerticalContentAlignment="Center" />
            <Button
                Command="{Binding AppSelectorCommand}"
                Content="选择启动程序..."
                Grid.Column="2"
                Grid.Row="0"
                IsEnabled="{Binding !IsRunning}" />

            <Label Grid.Column="0" Grid.Row="1" Content="启动程序数量："
                   HorizontalAlignment="Center"
                   Margin="5"
                   VerticalContentAlignment="Center">
            </Label>

            <NumericUpDown Grid.Column="1" Grid.Row="1"
                           HorizontalContentAlignment="Left"
                           Margin="5"
                           VerticalContentAlignment="Center"
                           Increment="1"
                           Value="1"
                           Minimum="1"
                           Maximum="10">
            </NumericUpDown>

            <Button
                Command="{Binding AppRunCommand}"
                Content="启动"
                Grid.Column="1"
                Grid.Row="2"
                HorizontalContentAlignment="Center"
                HorizontalAlignment="Left"
                IsEnabled="{Binding !IsRunning}"
                Margin="20 "
                Padding="20"
                Width="200" />
            <Button
                Command="{Binding AppCancleCommand}"
                Content="取消"
                Grid.Column="1"
                Grid.Row="2"
                HorizontalContentAlignment="Center"
                HorizontalAlignment="Right"
                IsEnabled="{Binding IsRunning}"
                Margin="220,20,20,20"
                Padding="20"
                Width="200" />
        </Grid>
    </StackPanel>

</Window>